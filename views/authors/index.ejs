<h2>Search Authors</h2>
<form action="/authors" method="GET">
  <label for="name">Name:</label>
  <input type="text" name="name" value="<%= searchOptions.name %>">
  <button type="submit">Search</button>
</form>
<br>
<div class="author-list">
  <% authors.forEach(author=> { %>
    <div class="author-item">
      <h3>
        <%= author.name %>
      </h3>
      <ul class="author-actions">
        <li><a href="/authors/<%= author.id %>" class="btn btn-primary">View</a></li>
        <li><a href="/authors/<%= author.id %>/edit" class="btn btn-secondary">Edit</a></li>

        <%- include ("../partials/deleteForm", { url:`/authors/${author.id}` }) %>
      </ul>
    </div>
    <% }); %>
</div>